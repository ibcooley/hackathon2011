<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/logo"
		android:background="#FFFFFF" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#FFFFFF">
		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingTop="100dip"
			android:padding="30dip" android:text="@string/mark_my_spot"
			android:onClick="markSpot" />
		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="30dip"
			android:text="@string/find_empty_spot" android:onClick="findSpot" />
		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="30dip"
			android:text="@string/locate_my_car" android:onClick="locateCar" />
		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="30dip"
			android:text="@string/locate_my_car_AugReality" android:onClick="locateCar2" />
	</LinearLayout>
</LinearLayout>
