<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/lineItem"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center_vertical">
	 
	<CheckBox android:id="@+id/checkBox" android:text=""
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="True" android:layout_width="50sp"/>

	<TextView android:id="@+id/textLine" android:textSize="24sp"
		android:textColor="#FFFFFFFF" android:layout_width="wrap_content"
		android:layout_toLeftOf="@+id/iconLine" android:layout_toRightOf="@+id/checkBox" android:layout_height="47dp"/>
		
	<ImageView android:id="@+id/iconLine" android:layout_width="48dip"
		android:layout_height="53dip" android:layout_alignParentRight="true" android:background="@drawable/icon_0"
		android:layout_toRightOf="@+id/textView"/>

</RelativeLayout>