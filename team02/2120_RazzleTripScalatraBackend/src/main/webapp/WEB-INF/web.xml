<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>BrewvivalScalatra</servlet-name>
        <servlet-class>com.hackathon.BrewvivalScalatra</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HackathonScalatra</servlet-name>
        <servlet-class>com.hackathon.HackathonScalatra</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BrewvivalScalatra</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HackathonScalatra</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/images/*</url-pattern>
        <url-pattern>/css/*</url-pattern>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
</web-app>